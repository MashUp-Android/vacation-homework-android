<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activity.MainActivity"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical">
  <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <include
      layout="@layout/item_global_header"/>
    <android.support.design.widget.TabLayout
      android:id="@+id/tabLayout_navBar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/activity_main_global_header_layout_height"/>
    <android.support.v4.view.ViewPager
      android:id="@+id/frameLayout_main"
      android:layout_height="match_parent"
      android:layout_width="match_parent"/>
  </LinearLayout>
  <android.support.design.widget.FloatingActionButton
    android:id="@+id/floatingActionButton_write"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:text="@string/TEMP"
    android:layout_margin="@dimen/activity_main_floating_action_button_write_layout_margin"/>
</FrameLayout>
